extends base 
block content    
        .signup-box
            .left
                h1 Sign up
                form
                    input.name(type='text', name='username', placeholder='Username', required='')
                    input.email(type='text', name='email', placeholder='E-mail', required='')
                    input.password(type='password', name='password', placeholder='Password', required='')
                    input.confirmPassword(type='password', name='password2', placeholder='Confirm password', required='')
                    input.signup(type='submit', name='signup_submit', value='signup')
            .right
                span.loginwith
                    | Sign in with
                    br
                    | social network
                button.social-signin.facebook
                    a.Normal-login(href='/login') Already a Member? LogIn
                button.social-signin.twitter Log in with Twitter
                button.social-signin.google Log in with Google+
            .or OR
